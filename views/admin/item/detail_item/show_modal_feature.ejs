<div class="modal fade" id="modalEditFeature" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Update Feature</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form method="POST" action="/admin/item/updateFeature?_method=PUT" enctype="multipart/form-data">
            <div class="modal-body">
                <div class="form-group">
                    <label for="bankInput">Name Features</label>
                    <input type="text" name="name" class="form-control" id="nameFitur" placeholder="Input name feature" required>
                </div>
                <div class="form-group">
                    <label for="bankInput">Quantity</label>
                    <input type="number" name="qty" class="form-control" id="qtyFitur" placeholder="Input quantity" required>
                </div>
                <div class="form-group">
                    <label for="bankInput">Image</label>
                    <input type="file" name="image" class="form-control">
                </div>
            </div>
            <div class="modal-footer">
                <input type="hidden" class="id" name="id">
                <input type="hidden" name="itemId" value="<%= itemId %>">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Update data</button>
            </div>
        </form>
      </div>
    </div>
  </div>