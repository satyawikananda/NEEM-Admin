<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="home-tab">
    <div class="card shadow mb-4 mt-3">
      <div class="card-body">
        <div class="row">
            <div class="col-md-5 col-sm-12">
              <form method="POST" action="/admin/item/add-feature" enctype="multipart/form-data">
                  <div class="modal-body">
                      <div class="form-group">
                        <label for="bankInput">Name Features</label>
                        <input type="text" name="name" class="form-control" id="nameFeature" placeholder="Input name feature" required>
                      </div>
                      <div class="form-group">
                        <label for="bankInput">Quantity</label>
                        <input type="number" name="qty" class="form-control" id="qty" placeholder="Input quantity" required>
                      </div>
                      <div class="form-group">
                        <label for="bankInput">Image</label>
                        <input type="file" name="image" class="form-control">
                      </div>
                  </div>
                  <input type="hidden" name="itemId" value="<%= itemId %>">
                  <button type="submit" class="btn btn-primary">Save</button>
              </form>
            </div>
            <div class="col-md-7 col-sm-12">
                <div class="table-responsive">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th>No</th>
                        <th>Name feature</th>
                        <th>Quantity</th>
                        <th>Image</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for( let i = 0; i < feature.length; i++ ) { %>
                          <tr>
                            <td><%= i+1 %></td>
                            <td><%= feature[i].name %></td>
                            <td><%= feature[i].qty %></td>
                            <td style="width: 20%;">
                              <img src="http://localhost:3000/<%= feature[i].imageUrl %>" style="width: 100%;" alt=<%= feature[i].name %>>
                            </td>
                            <td>
                              <form action="" method="POST">
                                <a href="" class="btn btn-warning btn-circle btn-sm button-update" data-toggle="modal" data-target="#modalEditBank" data-id="<%= feature[i]._id %>" data-name="<%= feature[i].name %>" data-feature="<%= feature[i].qty %>">
                                  <i class="fas fa-edit"></i>
                                </a>
                                <button type="submit" href="" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                              </form>
                            </td>
                          </tr>
                        <% } %>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>