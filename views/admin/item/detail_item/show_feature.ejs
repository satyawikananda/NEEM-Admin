<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="home-tab">
    <div class="card shadow mb-4 mt-3">
      <div class="card-body">
        <div class="row">
            <div class="col-md-5 col-sm-12">
              <form method="POST" action="/admin/item/add-feature" enctype="multipart/form-data">
                  <div class="modal-body">
                      <div class="form-group">
                        <label for="bankInput">Name Feature</label>
                        <input type="text" name="name" class="form-control" id="nameFeature" placeholder="Input name feature" required>
                      </div>
                      <div class="form-group">
                        <label for="bankInput">Quantity</label>
                        <input type="number" name="qty" class="form-control" id="qty" placeholder="Input quantity" required>
                      </div>
                      <div class="form-group">
                        <label for="bankInput">Image</label>
                        <input type="file" name="image" class="form-control">
                      </div>
                  </div>
                  <input type="hidden" name="itemId" value="<%= itemId %>">
                  <button type="submit" class="btn btn-primary">Save</button>
              </form>
            </div>
            <div class="col-md-7 col-sm-12">
                <div class="table-responsive">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th>No</th>
                        <th>Name feature</th>
                        <th>Quantity</th>
                        <th>Image</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                        
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>