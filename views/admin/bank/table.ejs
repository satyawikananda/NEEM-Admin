<div class="card shadow mb-4">
  <div class="card-header py-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addBank">
      Add Bank
    </button>
  </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Name Bank</th>
              <th>No Rekening</th>
              <th>Name nasabah</th>
              <th>Image</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for( let index = 0; index < bank.length; index++ ) { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= bank[index].nameBank %></td>
                <td><%= bank[index].nomorRekening %></td>
                <td><%= bank[index].name %></td>
                <td style="width: 20%;">
                  <img src="http://localhost:3000/<%= bank[index].imageUrl %>" style="width: 100%;" alt=<%= bank[index].nameBank %>>
                </td>
                <td>
                  <form action="/admin/category/<%= bank[index]._id %>?_method=DELETE" method="POST">
                    <a href="" class="btn btn-warning btn-circle btn-sm button-update" data-toggle="modal" data-target="#modalEditBank" data-id="<%= bank[index]._id %>" data-name="<%= bank[index].name %>"><i class="fas fa-edit"></i></a>
                    <button type="submit" href="" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                  </form>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%- include('./add_modal.ejs') %>