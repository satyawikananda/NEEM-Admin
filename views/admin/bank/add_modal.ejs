                </div>
                <div class="form-group">
                  <label for="bankInput">No rekening</label>
                  <input type="text" name="nomorRekening" class="form-control" id="noRek" placeholder="Input no rekening" required>
                </div>
                <div class="form-group">
                  <label for="bankInput">Name</label>
                  <input type="text" name="name" class="form-control" id="name" placeholder="Input name" required>
                </div>
                <div class="form-group">
                  <label for="bankInput">Image</label>
                  <input type="file" name="image" class="form-control" required>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
      </div>
    </div>
  </div>